# DiscordImageSync クライアント設定ファイル
# このファイルをコピーして config.ini として使用してください

[General]
# ログ言語設定 (ja: 日本語, en: english)
language = ja

[Server]
# WebSocketサーバーのURL
websocket_url = ws://localhost:8765

# =========================================
# 複数サーバー対応設定
# [Sync.{任意の名前}] セクションを追加することで複数のDiscordサーバーに対応できます
# =========================================

[Sync.ServerA]
# このサーバー設定を有効にするか (true/false)
enabled = true
# Discord サーバーID（識別用）
server_id = 123456789012345678
# 対象チャンネルID
channel_id = 987654321098765432
# ローカル同期ディレクトリパス（相対パスまたは絶対パス）
local_path = ./shared/srvA

[Sync.ServerB]
enabled = false
server_id = 111111111111111111
channel_id = 222222222222222222
local_path = ./shared/srvB

# =========================================
# 転送設定
# =========================================

[Transfer]
# 最大ファイルサイズ (MB)
max_file_size_mb = 10
# 送信インターバル (秒)
send_interval_sec = 30
# アディッショナルタイム（他者の書き込み検知時の追加待機時間） (秒)
additional_time_sec = 15
# パケットタイムアウト（応答がない場合の破棄時間） (秒)
packet_timeout_sec = 300

# =========================================
# ファイル設定
# =========================================

[Files]
# 対象とする画像ファイルの拡張子（カンマ区切り）
supported_extensions = .jpg,.jpeg,.png,.webp,.gif
# 転送データの拡張子
data_file_extension = .dat

# =========================================
# シャドウディレクトリ設定
# =========================================

[Shadow]
# シャドウディレクトリ名
shadow_dir_name = .shadow
# テンポラリディレクトリ名（シャドウディレクトリ内）
temp_dir_name = temp
# ハッシュ管理ディレクトリ名（シャドウディレクトリ内）
hash_dir_name = hashes
